<div class="container my-5">
  <%= render 'dummy-tabs' %>
  <div class="row">

    <div class="col">
        <%= render 'account-dummy' %>
    </div>
      <div class="col-6">
        <div class="card">

          <h5 class="card-header">Your Address</h5>

            <div class="card-body">
              <p> This is your latest registered address.<br> To change it please enter your password.</p>
              <h5 class="text-warning"> <strong>Address</strong>: <%= "#{@user.street_name}, #{@user.street_number}, #{@user.zip} #{@user.city}" %></h5>
              <div class="form-group mt-3">
                <label for="exampleInputPassword1">New Address</label>
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Enter your new Address">
              </div>
              <div class="form-group">
                <label for="exampleInputPassword1">Your Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Enter your Password">
              </div>
              <%= link_to "Submit Changes", root_path, class: "btn button border text-dark rounded mt-3" %>
            </div>

        </div>
        <div class="card mt-3 w-100">
          <h5 class="card-header">Password</h5>
            <div class="card-body">
              <form>
              <div class="form-group">
                <label for="exampleInputEmail1">Current Password</label>
                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Current Password">
                <small id="emailHelp" class="form-text text-muted">We'll never share your info with anyone else.</small>
              </div>
              <div class="form-group">
                <label for="exampleInputPassword1">New Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="New Password">
              </div>
              <div class="form-group">
                <label for="exampleInputPassword1">Confirm New Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="New Password">
              </div>

              <button type="submit" class="btn button border text-dark rounded">Change Password</button>
              </form>
           </div>
          </div>
      </div>
    </div>
    <%= render 'dummies' %>
</div>


